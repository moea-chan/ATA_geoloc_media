<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    

    <com.mediageoloc.ata.utils.ObserverImageView
        android:id="@+id/photo_preview"
        android:layout_width="140dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:contentDescription="TODO"
        android:src="@drawable/ic_launcher" />

	<Button
	    android:id="@+id/button_save_comment"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/edit_text_comment"
	    android:layout_below="@+id/edit_text_comment"
	    android:layout_marginTop="36dp"
	    android:text="@string/ok_button" />

	<EditText
	    android:id="@+id/edit_text_comment"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/photo_preview"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="18dp"
	    android:ems="10"
	    android:inputType="textMultiLine"
	    android:maxLength="140" >

	    <requestFocus />
	</EditText>

</RelativeLayout>
